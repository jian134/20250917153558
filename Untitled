deploy:
  type: git
  repo: https://github.com/您的用户名/您的仓库名.git
  branch: gh-pages  # 如果是username.github.io仓库，使用main或master分支
  message: Site updated: {{ now('YYYY-MM-DD HH:mm:ss') }}
name: Pages

on:
  push:
    branches:
      - main  # 或者您的源代码所在的分支

jobs:
  pages:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Use Node.js 16.x
        uses: actions/setup-node@v2
        with:
          node-version: '16'
      - name: Cache NPM dependencies
        uses: actions/cache@v2
        with:
          path: node_modules
          key: ${{ runner.OS }}-npm-cache
          restore-keys: |
            ${{ runner.OS }}-npm-cache
      - name: Install Dependencies
        run: npm install
      - name: Build
        run: npm run build
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public
